img {
  border-style: solid;
  border-width: 1px;
  border-color: #e2e2e2;
  margin-top: 1rem;
  margin-bottom: 1rem;
  max-width: 75%;
  -webkit-box-shadow: 10px 10px 22px -9px rgba(235, 235, 235, 1);
  -moz-box-shadow: 10px 10px 22px -9px rgba(235, 235, 235, 1);
  box-shadow: 10px 10px 22px -9px rgba(235, 235, 235, 1);
}

video::-webkit-media-controls-panel {
  background-image: none !important;
  
}

